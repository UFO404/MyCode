.box {
  /*遮罩层*/
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #000;
  opacity: 0.7;
  z-index: 1;
  transition: all 1s ease-in-out 0s;
  -webkit-transition: all 1s ease-in-out 0s;
}

.q_window {
  /*引用串窗口*/
  position: fixed;
  width: 80%;
  margin-left: 10%;
  margin-top: 10%;
  z-index: 4;
  max-height: 90%;
  display: block;
  transition: all 1s ease-in-out 0s;
  -webkit-transition: all 1s ease-in-out 0s;
}
