.fliststl {
  /*板块列表*/
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  z-index: 5;
}

.wc {
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}

.page-content {
  display: flex;
  position: fixed;
  margin: 0px;
  width: 75%;
  margin-left: -75%;
  margin-top: 0px;
  height: 100%;
  background-color: rgb(0, 68, 97);
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
  z-index: 5;
  box-shadow: 0px 0px 6px 0px #fff;
}

.page-top {
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 8px;
  padding-left: 7px;
  padding-right: 7px;
  box-sizing: border-box;
  width: 100%;
  /*background: #F5F5F5;*/
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  position: absolute;
  z-index: 0;
  /*margin: 0px;*/
  margin-left: 0;
  margin-top: 0px;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
  background-color: #f5f5f5;
}

.tap_cn {
  position: fixed;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(1) translate(100%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(100%, 0%);
}

.footer {
  /*低栏*/
  display: flex;
  justify-content: space-between;
  bottom: 0pt;
  margin: 0pt;
  position: fixed;
  margin-bottom: 0px;
  width: 100%;
  background-color: #0cf;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.icons {
  /*底栏图标*/
  width: 50px;
  height: 50px;
  margin: 0px 15px 0px 15px;
}

.main_list {
